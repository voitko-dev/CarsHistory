<Window x:Class="CarsHistory.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Car Auction App" Height="400" Width="600">
    <Grid>
        <!-- Основне меню -->
        <Menu VerticalAlignment="Top">
            <MenuItem Header="Operations">
                <MenuItem Header="Add New Car" Click="MenuItem_AddCar_Click"/>
                <MenuItem Header="Find Car" Click="MenuItem_FindCar_Click"/>
                <MenuItem Header="Delete Car" Click="MenuItem_DeleteCar_Click"/>
            </MenuItem>
        </Menu>

        <!-- Статус та контент -->
        <Frame Name="ContentFrame" Margin="10,30,10,10" />
    </Grid>
</Window>