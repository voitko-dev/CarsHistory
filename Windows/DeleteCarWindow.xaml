<Window x:Class="CarsHistory.Windows.DeleteCarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xctk"
        Title="Delete Cars by Date Range" Height="250" Width="400">
    <Grid>
        <!-- WatermarkTextBox для введення діапазону дат -->
        <TextBlock Text="Select Date Range" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        
        <DatePicker Name="dpStartDate" Width="200" Height="30" Margin="10,40,10,0" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <DatePicker Name="dpEndDate" Width="200" Height="30" Margin="10,80,10,0" HorizontalAlignment="Left" VerticalAlignment="Top" />

        <!-- Кнопка для видалення автомобілів за діапазоном дат -->
        <Button Name="btnDeleteCars" Width="100" Height="30" Content="Delete Cars" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,10,10,0" Click="btnDeleteCars_Click"/>

        <!-- Місце для відображення статусу -->
        <TextBlock Name="txtStatus" Width="350" Height="30" Margin="10,120,10,10" HorizontalAlignment="Left" VerticalAlignment="Top"/>
    </Grid>
</Window>